{
  "name": "extension",
  "version": "1.0.0",
  "lockfileVersion": 3,
  "requires": true,
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "description": "Track time spent on websites and manage productivity",
  "host_permissions": [
    "<all_urls>"
  ],
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms",
    "identity"
  ],
  "packages": {},
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
